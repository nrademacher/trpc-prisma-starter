{
  "name": "trpc-prisma-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:1-migrate": "prisma migrate deploy",
    "build:2-build": "next build",
    "build": "run-s build:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "yarn prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dev": "next dev",
    "dx": "run-s db-up db-migrate-dev dev",
    "start": "next start",
    "format": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|js|css|json)\" --write --list-different --config prettier.config.js",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:e2e": "jest --config jest.playwright.config.ts",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./{*,src/**/*}.{js,ts,jsx,tsx}": [
      "yarn format",
      "yarn lint-fix"
    ],
    "./prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.8",
    "@prisma/client": "^3.10.0",
    "@trpc/client": "^9.23.2",
    "@trpc/next": "^9.23.2",
    "@trpc/react": "^9.23.2",
    "@trpc/server": "^9.23.2",
    "bcrypt": "^5.0.1",
    "next": "^12.1.0",
    "next-auth": "^4.5.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.27.1",
    "react-query": "^3.34.16",
    "start-server-and-test": "^1.12.0",
    "superjson": "^1.8.1",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.1",
    "jest-playwright": "^0.0.1",
    "jest-playwright-preset": "^1.4.5",
    "lint-staged": ">=12",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.2",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.10.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "4.6.4",
    "zod-prisma": "^0.5.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
